FROM fedora:29
RUN dnf update -y && \
    dnf install -y \
        cmake \
        coreutils-single \
        CUnit-devel \
        ctags \
        clang-7.0.0 \
        clang-libs-7.0.0 \
        fftw-devel \
        libomp-devel-7.0.0 \
        libzstd-devel \
        netcdf-devel \
        ninja-build \
        ocl-icd-devel \
        pocl-devel \
        gcc \
        zlib-devel && \
    dnf clean all
COPY . /build/
WORKDIR /build/
RUN rm -rf build && \
    mkdir -p build && \
    cd build && \
    cmake .. -G Ninja && \
    ninja
